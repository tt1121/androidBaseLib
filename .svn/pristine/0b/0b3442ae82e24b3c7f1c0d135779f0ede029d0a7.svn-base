<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:base="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >
    <com.astuetz.PagerSlidingTabStrip
      android:id="@+id/page_tabs"
      android:layout_width="match_parent"
      android:layout_height="40dip"
      android:textColor="@color/tab_indicator_color"
      android:textSize="13sp"
      base:pstsShouldExpand = "true"
      base:pstsUnderlineColor = "#ffcbccd0"
      base:pstsIndicatorColor = "#ff85be23"
      base:pstsIndicatorHeight="2dp"
      base:pstsMaxIndicatorTabWidthRate="0.35"
      />
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
